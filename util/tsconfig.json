{
    "compilerOptions": {
        "declaration": false,
        "inlineSourceMap": false,
        "lib": ["dom", "es5", "es2015.collection", "es2015.iterable", "es2015.promise"],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "pretty": true,
        "rootDir": "..",
        "sourceMap": true,
        "strict": true
    },
    "exclude": [
        "../src/**/*.ts"
    ],
    "include": [
        "./*.ts"
    ]
}
